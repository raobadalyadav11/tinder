<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>ConnectSphere</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>connectsphere</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
	
	<!-- Camera Permission -->
	<key>NSCameraUsageDescription</key>
	<string>ConnectSphere needs camera access to take profile photos and share moments with matches.</string>
	
	<!-- Photo Library Permission -->
	<key>NSPhotoLibraryUsageDescription</key>
	<string>ConnectSphere needs photo library access to select and upload profile pictures.</string>
	
	<!-- Location Permissions -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>ConnectSphere uses your location to find matches nearby and show distance to other users.</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>ConnectSphere uses your location to find matches nearby and notify you when friends are close.</string>
	<key>NSLocationAlwaysUsageDescription</key>
	<string>ConnectSphere uses your location to provide proximity alerts when your matches are nearby.</string>
	
	<!-- Contacts Permission -->
	<key>NSContactsUsageDescription</key>
	<string>ConnectSphere can access your contacts to help you find friends who are already using the app.</string>
	
	<!-- Microphone Permission -->
	<key>NSMicrophoneUsageDescription</key>
	<string>ConnectSphere needs microphone access to record and send voice messages to your matches.</string>
	
	<!-- Bluetooth Permission -->
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>ConnectSphere uses Bluetooth to enhance proximity detection and improve matching accuracy.</string>
	<key>NSBluetoothPeripheralUsageDescription</key>
	<string>ConnectSphere uses Bluetooth to detect nearby users and improve location-based features.</string>
	
	<!-- Motion Permission -->
	<key>NSMotionUsageDescription</key>
	<string>ConnectSphere uses motion data to enhance user experience and activity tracking.</string>
	
	<!-- Face ID Permission -->
	<key>NSFaceIDUsageDescription</key>
	<string>ConnectSphere can use Face ID for secure and convenient app authentication.</string>
	
	<!-- Background Modes -->
	<key>UIBackgroundModes</key>
	<array>
		<string>background-fetch</string>
		<string>background-processing</string>
		<string>location</string>
		<string>remote-notification</string>
	</array>
	
	<!-- App Transport Security -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<true/>
		<key>NSAllowsLocalNetworking</key>
		<true/>
	</dict>
	
</dict>
</plist>